server {
	listen              443 ssl;
	server_name         share.consomalin.ovh;

	ssl_certificate     /app/ssl/nginx/share.consomalin.ovh/cert.pem;
	ssl_certificate_key /app/ssl/nginx/share.consomalin.ovh/privkey.pem;

	location / {
		set $address http://owncloud;
		proxy_pass $address;
		proxy_set_header Host $http_host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}
