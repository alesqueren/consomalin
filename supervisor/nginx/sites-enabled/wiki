server {
	listen              443 ssl;
	server_name         wiki.consomalin.ovh;

	ssl_certificate     /app/ssl/nginx/wiki.consomalin.ovh/cert.pem;
	ssl_certificate_key /app/ssl/nginx/wiki.consomalin.ovh/privkey.pem;

	auth_ldap "Forbidden";
	auth_ldap_servers ldap;
	location / {
		set $address http://wiki;
		proxy_pass $address;
		proxy_set_header Host $http_host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}
