server {
    listen 443 ssl;
    server_name $domain;
    ssl_certificate     /app/ssl/api.devatics.io.crt;
    ssl_certificate_key /app/ssl/api.devatics.io.key;
    location / {
        # use dynamic dns resolution by using variable
        set $address http://$service;
        proxy_pass $address;

        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
    }
}
